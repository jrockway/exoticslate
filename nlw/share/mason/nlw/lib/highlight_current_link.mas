<%init>
my $c = $m->content();

my $current_uri = $r->parsed_uri->path;

# XXX - if the A tags already have a class attribute this will break it
for my $uri ( $c =~ /<a[^>]*href=\"([^"]+)\"/g ) {
    if ( $current_uri =~ /^\Q$uri\E/ ) {
        $c =~ s/<a([^>]*href="\Q$uri\E"[^>]*)>/<a class="selected" $1>/;
        last;
    }
}

$m->out($c);
</%init>
