#!/usr/bin/perl
# @COPYRIGHT@

use strict;
use warnings;
use Template;
use IO::All;
use YAML;

my ($template_name, $output_path) = @ARGV;

my $test_file_name = $output_path;

my $t = Template->new(
    {
        INCLUDE_PATH => ['template/'],
    }
);

my $data = index_data();

my $result;

$t->process($template_name, $data, \$result) or die $t->error;

io($output_path)->print($result);

sub index_data {
    my $data = {
            tests => [map{ s/\.html$//; $_ } glob("tests/*.html") ]
    };
    return $data;
}
